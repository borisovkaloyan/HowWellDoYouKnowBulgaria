<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pmu_Course_Work.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Колко добре познаваш България?" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label FontSize="20" HorizontalOptions="Center" Margin=" 20 "
               Text="Ще ти бъдат зададени 10 въпроса, за да определим колко добре познаваш България."></Label>
        <Button x:Name="PageButton" Clicked="StartQuiz" IsEnabled="False" FontSize="20" HorizontalOptions="Center" Margin=" 20 " Text="Започни теста" ></Button>
    </StackLayout>

</ContentPage>
